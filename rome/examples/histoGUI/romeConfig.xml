<!-- Please check ROME homepage for details of tags
http://midas.psi.ch/rome/romeConfigSchemaDocumentation.htm -->

<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="c:/rome/romeConfig.xsd">
  <ProgramConfiguration>
    <ProgramMode>2</ProgramMode>
  </ProgramConfiguration>

  <MainConfiguration>
    <Modes>
      <AnalyzingMode>offline</AnalyzingMode>
      <DAQSystem>none</DAQSystem>
    </Modes>

    <Offline>
      <RunNumbers>1</RunNumbers>
      <EventNumbers>1-400000</EventNumbers>
      <InputFileNames></InputFileNames>
    </Offline>

    <Online>
      <Host></Host>
      <Experiment></Experiment>
      <AnalyzerName>HGUIExample</AnalyzerName>
      <MemoryBuffer>SYSTEM</MemoryBuffer>
    </Online>

    <Paths>
      <InputFilePath>./</InputFilePath>
      <OutputFilePath>./</OutputFilePath>
    </Paths>

    <Common>
      <Settings>
        <VerboseLevel>normal</VerboseLevel>
        <ReportMaxCount>20</ReportMaxCount>
        <ConfigCommentLevel>1</ConfigCommentLevel>
        <QuitMode>false</QuitMode>
        <ShowSplashScreen>false</ShowSplashScreen>
        <GraphicalConfigEdit>true</GraphicalConfigEdit>
        <PreserveConfig>false</PreserveConfig>
      </Settings>

      <FloatingPointExceptionTrap>
        <Invalid>false</Invalid>
        <DivByZero>false</DivByZero>
        <Overflow>false</Overflow>
        <Underflow>false</Underflow>
        <Inexact>false</Inexact>
      </FloatingPointExceptionTrap>

      <SocketServer>
        <Active>false</Active>
        <PortNumber>9090</PortNumber>
      </SocketServer>

      <DataBases/>
    </Common>

    <Analyzer>
      <HistogramRead>
        <Read>false</Read>
        <RunNumber>0</RunNumber>
      </HistogramRead>

      <Macros>
        <BeginOfRun></BeginOfRun>
        <BeginOfEvent></BeginOfEvent>
        <EndOfEvent></EndOfEvent>
        <EndOfRun></EndOfRun>
      </Macros>

      <Tasks>
        <Task>
          <TaskName>FillHisto</TaskName>
          <Active>true</Active>
        </Task>
      </Tasks>
    </Analyzer>

    <Monitor>
      <Display>
        <WindowScale>1.0</WindowScale>
        <StatusBar>true</StatusBar>
        <UpdateFrequency>100</UpdateFrequency>
        <AnalyzerController>
          <Active>false</Active>
          <NetFolderName></NetFolderName>
        </AnalyzerController>
      </Display>

      <SocketClient>
        <Host>localhost</Host>
        <Port>9090</Port>
      </SocketClient>

      <Tabs>
        <Tab>
          <TabName>GeneratedHisto</TabName>
          <Active>true</Active>
          <SingleObject>
            <SingleObjectName>MyHisto</SingleObjectName>
            <DrawOption></DrawOption>
            <LogScaleX>true</LogScaleX>
            <LogScaleY>false</LogScaleY>
            <LogScaleZ>false</LogScaleZ>
          </SingleObject>

          <SingleObject>
            <SingleObjectName>MyOtherHisto</SingleObjectName>
            <DrawOption></DrawOption>
            <LogScaleX>false</LogScaleX>
            <LogScaleY>false</LogScaleY>
            <LogScaleZ>false</LogScaleZ>
          </SingleObject>

          <SingleObject>
            <SingleObjectName>MyGraph</SingleObjectName>
            <DrawOption></DrawOption>
            <LogScaleX>false</LogScaleX>
            <LogScaleY>false</LogScaleY>
            <LogScaleZ>false</LogScaleZ>
          </SingleObject>
        </Tab>
      </Tabs>
    </Monitor>
  </MainConfiguration>
</Configuration>
