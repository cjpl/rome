<!-- Please check ROME homepage for details of tags
http://midas.psi.ch/rome/romeConfigSchemaDocumentation.htm -->

<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="">
  <ProgramConfiguration>
    <ProgramMode>1</ProgramMode>
  </ProgramConfiguration>

  <MainConfiguration>
    <Modes>
      <AnalyzingMode>offline</AnalyzingMode>
      <DAQSystem>none</DAQSystem>
    </Modes>

    <Offline>
      <RunNumbers></RunNumbers>
      <EventNumbers></EventNumbers>
      <InputFileNames></InputFileNames>
    </Offline>

    <Online>
      <Host></Host>
      <Experiment></Experiment>
      <AnalyzerName>TBmonitor</AnalyzerName>
      <MemoryBuffer>SYSTEM</MemoryBuffer>
    </Online>

    <Paths>
      <InputFilePath>./</InputFilePath>
      <OutputFilePath>./</OutputFilePath>
      <OutputFileOption>RECREATE</OutputFileOption>
      <MakeOutputDirectory>false</MakeOutputDirectory>
    </Paths>

    <Common>
      <Settings>
        <VerboseLevel>normal</VerboseLevel>
        <ReportMaxCount>20</ReportMaxCount>
        <ConfigCommentLevel>1</ConfigCommentLevel>
        <QuitMode>false</QuitMode>
        <ShowSplashScreen>true</ShowSplashScreen>
        <GraphicalConfigEdit>false</GraphicalConfigEdit>
        <PreserveConfig>false</PreserveConfig>
      </Settings>

      <FloatingPointExceptionTrap>
        <Invalid>false</Invalid>
        <DivByZero>false</DivByZero>
        <Overflow>false</Overflow>
        <Underflow>false</Underflow>
        <Inexact>false</Inexact>
      </FloatingPointExceptionTrap>

      <SocketServer>
        <Active>false</Active>
        <PortNumber>9090</PortNumber>
      </SocketServer>

      <DataBases/>

      <GlobalSteeringParameters>
        <SteeringParameterField>
          <!-- Switch for pedestal calculation -->
          <SPName>Piedi</SPName>
          <SPValue>false</SPValue>
        </SteeringParameterField>
      </GlobalSteeringParameters>
    </Common>

    <Analyzer>
      <HistogramRead>
        <Read>false</Read>
        <RunNumber>0</RunNumber>
        <Path>./</Path>
        <FileName></FileName>
      </HistogramRead>

      <HistogramWrite>
        <Write>true</Write>
        <Path>./</Path>
        <FileName></FileName>
        <AccumulateAll>false</AccumulateAll>
      </HistogramWrite>

      <Macros>
        <BeginOfRun></BeginOfRun>
        <BeginOfEvent></BeginOfEvent>
        <EndOfEvent></EndOfEvent>
        <EndOfRun></EndOfRun>
      </Macros>
    </Analyzer>

    <Monitor>
      <Display>
        <WindowScale>1.0</WindowScale>
        <StatusBar>true</StatusBar>
        <UpdateFrequency>0</UpdateFrequency>
        <ListTreeView>false</ListTreeView>
        <AnalyzerController>
          <Active>false</Active>
          <NetFolderName></NetFolderName>
        </AnalyzerController>
      </Display>

      <SocketClient>
        <Host>localhost</Host>
        <Port>9090</Port>
      </SocketClient>

      <Tabs>
        <Tab>
          <TabName>Tab1</TabName>
          <Active>true</Active>
          <SteeringParameterField>
            <!-- Color of text. -->
            <SPName>Color</SPName>
            <SPValue>1</SPValue>
          </SteeringParameterField>

          <Tab>
            <TabName>Tab1_1</TabName>
            <Active>true</Active>
            <SteeringParameterField>
              <!-- Color of text. -->
              <SPName>Color</SPName>
              <SPValue>1</SPValue>
            </SteeringParameterField>
          </Tab>

          <Tab>
            <TabName>Tab1_2</TabName>
            <Active>true</Active>
            <SteeringParameterField>
              <!-- Color of text. -->
              <SPName>Color</SPName>
              <SPValue>1</SPValue>
            </SteeringParameterField>
          </Tab>
        </Tab>

        <Tab>
          <TabName>Tab2</TabName>
          <Active>true</Active>
          <SteeringParameterField>
            <!-- Color of text. -->
            <SPName>Color</SPName>
            <SPValue>1</SPValue>
          </SteeringParameterField>

          <Tab>
            <TabName>Tab2_1</TabName>
            <Active>true</Active>
            <SteeringParameterField>
              <!-- Color of text. -->
              <SPName>Color</SPName>
              <SPValue>1</SPValue>
            </SteeringParameterField>
          </Tab>

          <Tab>
            <TabName>Tab2_2</TabName>
            <Active>true</Active>
            <SteeringParameterField>
              <!-- Color of text. -->
              <SPName>Color</SPName>
              <SPValue>1</SPValue>
            </SteeringParameterField>
          </Tab>
        </Tab>
      </Tabs>
    </Monitor>
  </MainConfiguration>
</Configuration>
