<!-- Please check ROME homepage for details of tags
http://midas.psi.ch/rome/romeConfigSchemaDocumentation.htm -->

<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="romeConfig.xsd">
  <ProgramConfiguration>
    <ProgramMode>1</ProgramMode>
  </ProgramConfiguration>

  <MainConfiguration>
    <Modes>
      <AnalyzingMode>online</AnalyzingMode>
      <DAQSystem>midas</DAQSystem>
    </Modes>

    <Offline>
      <RunNumbers></RunNumbers>
      <EventNumbers></EventNumbers>
      <InputFileNames></InputFileNames>
    </Offline>

    <Online>
      <Host></Host>
      <Experiment></Experiment>
      <AnalyzerName>FOmonitor</AnalyzerName>
      <MemoryBuffer>SYSTEM</MemoryBuffer>
    </Online>

    <Paths>
      <InputFilePath>./</InputFilePath>
      <OutputFilePath>./</OutputFilePath>
      <OutputFileOption>RECREATE</OutputFileOption>
      <MakeOutputDirectory>false</MakeOutputDirectory>
    </Paths>

    <Common>
      <Settings>
        <VerboseLevel>normal</VerboseLevel>
        <ReportMaxCount>20</ReportMaxCount>
        <ConfigCommentLevel>1</ConfigCommentLevel>
        <QuitMode>false</QuitMode>
        <ShowSplashScreen>true</ShowSplashScreen>
        <GraphicalConfigEdit>false</GraphicalConfigEdit>
        <PreserveConfig>false</PreserveConfig>
      </Settings>

      <FloatingPointExceptionTrap>
        <Invalid>false</Invalid>
        <DivByZero>false</DivByZero>
        <Overflow>false</Overflow>
        <Underflow>false</Underflow>
        <Inexact>false</Inexact>
      </FloatingPointExceptionTrap>

      <SocketServer>
        <Active>false</Active>
        <PortNumber>9090</PortNumber>
      </SocketServer>

      <DataBases>

        <DataBase>
          <Name>odb</Name>
          <Connection></Connection>
          <Type>odb</Type>
          <EventBased>false</EventBased>
        </DataBase>

        <DataBase>
          <Name>myxml</Name>
          <Connection>.;FODataBase</Connection>
          <Type>xml</Type>
          <EventBased>false</EventBased>
        </DataBase>
      </DataBases>
    </Common>

    <Analyzer>
      <HistogramRead>
        <Read>false</Read>
        <RunNumber>0</RunNumber>
        <Path></Path>
      </HistogramRead>

      <HistogramWrite>
        <Write>true</Write>
      </HistogramWrite>

      <Macros>
        <BeginOfRun></BeginOfRun>
        <BeginOfEvent></BeginOfEvent>
        <EndOfEvent></EndOfEvent>
        <EndOfRun></EndOfRun>
      </Macros>
    </Analyzer>

    <Monitor>
      <Display>
        <WindowScale>1.0</WindowScale>
        <StatusBar>true</StatusBar>
        <UpdateFrequency>0</UpdateFrequency>
        <ListTreeView>false</ListTreeView>
        <AnalyzerController>
          <Active>false</Active>
          <NetFolderName></NetFolderName>
        </AnalyzerController>
      </Display>

      <SocketClient>
        <Host>localhost</Host>
        <Port>9090</Port>
      </SocketClient>

      <NetFolder>
        <NetFolderName>mynetfolder</NetFolderName>
        <Active>true</Active>
        <Reconnect>true</Reconnect>
        <Root>FO</Root>
        <Host>localhost</Host>
        <Port>9090</Port>
      </NetFolder>

      <Tabs>
        <Tab>
          <TabName>Tab</TabName>
          <Active>true</Active>
        </Tab>
      </Tabs>
    </Monitor>
  </MainConfiguration>
</Configuration>
